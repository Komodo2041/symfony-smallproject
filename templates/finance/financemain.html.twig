<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Strona</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
   <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}" />
  </head>
  <body>
 
 
    <div class="container">
        <ul class="nav nav-underline">
 
            <li class="nav-item">
                <a class="nav-link {% if tab == "contractor" %} active {% endif %}" href="/contractors">Contractor</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Invoice</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if tab == "budget" %} active {% endif %}" href="/budgets">Budget</a>
            </li> 
        </ul>
        <br/>
        <div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}        
        </div>


        {% block body %}
         
        {% endblock %}
    </div> 


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script
    src="https://code.jquery.com/jquery-3.7.1.js"
    integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
    crossorigin="anonymous"></script>
    <script>
  
        $( document ).ready(function() {
           $(".delconfirm").click(function() {
                var dec = confirm("Czy checesz wykonać podaną akcję?");
              
                if (dec) {
                    return true;
                }
                return false;
           }); 
        });
    </script>
  </body>
</html>